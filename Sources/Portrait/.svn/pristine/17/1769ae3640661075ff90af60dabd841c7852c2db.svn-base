		  }else{ 
			  
			  
			  alert($("#datepicker").val());
			  var birthday = $("#datepicker").val();
			  location.href = "addBirthday.do?birthday="+birthday;
			  }
	  }
	
	
	  function search(){
		alert("Location:"+$("#searchByLocation").val());
